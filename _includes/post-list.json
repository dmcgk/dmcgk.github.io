{% include post-type.liquid %}
{
    "id": "{{ site.url }}{{ post.url }}",
    {% unless is_micro_post %}
    "title": "{{ post.title }}",
    {% endunless %}
    {% if post.description %}
    "summary": {{ post.description | jsonify }},
    {% endif %}
    "url": "{{ site.url }}{{ post.url }}",
    {% if post.images %}
    "image": "{{ site.url }}{{ site.images_path }}{{ post.images.first }}",
    {% capture image_string %}{% for image in post.images%}"<img src='{{ site.url }}{{ site.images_path }}{{ image }}'>"{% endfor %}{% endcapture %}
    {% else %}
    {% assign image_string = "" %}
    {% endif %}
    "content_html": {{ post.content | append: image_string | jsonify }},
    {% if post.link %}
    "external_url": "{{ post.link }}",
    {% endif %}
    {% if post.banner %}
    "banner_image": "{{ site.url }}{{ post.banner }}",
    {% endif %}
    "date_published": "{{ post.date | date_to_xmlschema }}"
}

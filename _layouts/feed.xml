---
layout: data

# We don't need this to be an archive, just a notification mechanism,
# so limit the number of posts cycled through to just the most recent.
---
<?xml version="1.0" encoding="utf-8"?>
<feed xmlns="http://www.w3.org/2005/Atom">
    <title type="text" xml:lang="{{ site.lang }}">fernseed</title>
    <link rel="alternate" type="text/html" href="http://fernseed.org/"/>
    <updated>{{ site.time | date_to_xmlschema }}</updated>
    <id>{{ site.url }}/</id>
    {% assign author = site.data.authors[site.author] %}
    {% if author %}
    	<rights>Copyright {{ site.time | date: '%Y' }} {{ author.name }} </rights>
    {% endif %}
    {{ content }}
</feed>

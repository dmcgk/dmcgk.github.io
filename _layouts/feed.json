---
layout: data
---
{
    "version": "https://jsonfeed.org/version/1",
    "title": "{{ site.title }}",
    "user_comment" :
    {% if page.name == "articles.json" %}
        "This feed lists only the article-length items posted to the site."
    {% elsif page.name == "micro.json" %}
        "This feed lists only the microblog entries posted to the site."
    {% else %}
        "This feed lists all of the items posted to the site, including microblog entries."
    {% endif %},
    "home_page_url": "{{ site.url }}/",
    "feed_url": "{{ site.url }}{{ page.url }}",
    "favicon": "{{ site.url }}/images/logo.png",
    "icon": "{{ site.url }}/images/logo@2x.png",
    {% assign author = site.data.authors[site.author] %}
    {% if author %}
        "author": {
            "name": "{{ author.name }}",
            "avatar": "{{ author.avatar }}",
            "url": "{{ author.urls | first }}"
        },
    {% endif %}
    "items": [
        {{ content }}
    ]
}
